{
  "name": "obsidian-rclone-bridge",
  "version": "0.1.0",
  "description": "Obsidian 插件：通过本地 rclone 命令实现双向同步的 GUI 包装器。",
  "main": "main.js",
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "esbuild main.ts --bundle --outfile=main.js --format=cjs --platform=node --target=es2020 --external:obsidian --sourcemap"
  },
  "keywords": [
    "obsidian",
    "rclone",
    "sync",
    "bisync"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.7.4",
    "esbuild": "^0.24.0",
    "obsidian": "^1.7.0",
    "typescript": "^5.6.2"
  }
}
